# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# App Configuration
APP_NAME=ShagMe
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# API Configuration
API_BASE_URL=https://api.shagme.app
API_TIMEOUT=10000

# Firebase Configuration (for authentication and real-time features)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Stripe Configuration (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_API_KEY=your_analytics_key_here

# Feature Flags
ENABLE_PREMIUM_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# Development Settings
DEBUG_MODE=true
ENABLE_FLIPPER=true
LOG_LEVEL=debug

# Verification Service Configuration
# Onfido Configuration
ONFIDO_API_TOKEN=your_onfido_api_token_here
ONFIDO_REGION=EU
ONFIDO_ENVIRONMENT=sandbox

# Persona Configuration  
PERSONA_API_TOKEN=your_persona_api_token_here
PERSONA_ENVIRONMENT=sandbox

# Jumio Configuration (for future implementation)
JUMIO_API_TOKEN=your_jumio_api_token_here
JUMIO_API_SECRET=your_jumio_api_secret_here
JUMIO_REGION=EU
JUMIO_ENVIRONMENT=sandbox

# Verification Service Settings
VERIFICATION_CONFIDENCE_THRESHOLD=0.85
VERIFICATION_MAX_RETRIES=3
VERIFICATION_TIMEOUT=30000

# Security Configuration
ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Testing and Development
DEBUG_VERIFICATION=false
MOCK_VERIFICATION_ENABLED=false
